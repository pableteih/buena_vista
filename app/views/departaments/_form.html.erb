<%= form_with(model: departament) do |form| %>
  <% if departament.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(departament.errors.count, "error") %> prohibited this departament from being saved:</h2>

      <ul>
        <% departament.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :images, style: "display: block" %>
    <%= form.file_field :images, multiple: true %>
  </div>


  <div>
    <%= form.label :floor, style: "display: block" %>
    <%= form.number_field :floor %>
  </div>

  <div>
    <%= form.label :number, style: "display: block" %>
    <%= form.number_field :number %>
  </div>

  <div>
    <%= form.label :bedrooms, style: "display: block" %>
    <%= form.number_field :bedrooms %>
  </div>

  <div>
    <%= form.label :bathrooms, style: "display: block" %>
    <%= form.number_field :bathrooms %>
  </div>

  <div>
    <%= form.label :squaremeters, style: "display: block" %>
    <%= form.number_field :squaremeters %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label :client_id, style: "display: block" %>
    <%= form.collection_select :client_id, Client.all, :id, :name, prompt: "selecciona el cliente" %>
  </div>

  <div>
    <%= form.label :building_id, style: "display: block" %>
    <%= form.collection_select :building_id, Building.all, :id, :name, promp: "selecciona el edificio" %>
  </div>

  <div>
    <%= form.label :status_id, style: "display: block" %>
    <%= form.collection_select :status_id, Status.all, :id, :name, promp: "selecciona su status" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
